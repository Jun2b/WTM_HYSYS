            + "2.8母："+ m28q + " * " + m28p + " = "+m28 + "</br>"
            + "3母："+ m30q + " * " + m30p + " = "+m30 + "</br>"
            + "3.5母："+ m35q + " * " + m35p + " = "+m35 + "</br>"
            + "4母："+ m40q + " * " + m40p + " = "+m40 + "</br>"
            + "5母："+ m50q + " * " + m50p + " = "+m50 + "</br>"
            + "中公："+ g10q + " * " + g10p + " = "+g10 + "</br>"
            + "2公："+ g20q + " * " + g20p + " = "+g20 + "</br>"
            + "2.5公："+ g25q + " * " + g25p + " = "+g25 + "</br>"
            + "3公："+ g30q + " * " + g30p + " = "+g30 + "</br>"
            + "3.5公："+ g35q + " * " + g35p + " = "+g35 + "</br>"
            + "4公："+ g40q + " * " + g40p + " = "+g40 + "</br>"
            + "4.5公："+ g40q + " * " + g45p + " = "+g45 + "</br>"
            + "5公："+ g50q + " * " + g50p + " = "+g50 + "</br>"
            + "6公："+ g60q + " * " + g60p + " = "+g60 + "</br>"
            + "7公："+ g70q + " * " + g70p + " = "+g70 + "</br>"
            + "8公：" + g80q + " * " + g80p + " = " + g80 + "</br>"
            +"总价："+total;
        layer.alert(info);

    };
</script>