                        $("#TodayPrice_g20p").val("");
                        $("#TodayPrice_g25p").val("");
                        $("#TodayPrice_g30p").val("");
                        $("#TodayPrice_g35p").val("");
                        $("#TodayPrice_g40p").val("");
                        $("#TodayPrice_g45p").val("");
                        $("#TodayPrice_g50p").val("");
