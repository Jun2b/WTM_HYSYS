        var g80p = $("#TodayPrice_g80p").val();

        var m10 = m10q * m10p;
        var m18 = m18q * m18p;
        var m20 = m20q * m20p;
        var m25 = m25q * m25p;
        var m28 = m28q * m28p;
        var m30 = m30q * m30p;
        var m35 = m35q * m35p;
        var m40 = m40q * m40p;
        var m50 = m50q * m50p;
        var g10 = g10q * g10p;
        var g20 = g20q * g20p;
        var g25 = g25q * g25p;
        var g30 = g30q * g30p;
        var g35 = g35q * g35p;
        var g40 = g40q * g40p;
        var g45 = g45q * g45p;
        var g50 = g50q * g50p;
        var g60 = g60q * g60p;
        var g70 = g70q * g70p;
        var g80 = g80q * g80p;
        var total = m10 +
            m18 +
            m20 +
            m25 +
            m28 +
            m30 +
            m35 +
            m40 +
            m50 +
            g10 +
            g20 +
            g25 +
            g30 +
            g35 +
            g40 +
            g45 +
            g50 +
            g60 +
            g70 +
            g80;
        $("#Entity_TotalPrice").val(total);
