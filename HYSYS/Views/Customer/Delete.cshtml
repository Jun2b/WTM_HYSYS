@model HYSYS.ViewModels.CustomerVMs.CustomerVM

<wt:form vm="@Model">
	<wt:quote>确定要删除这条数据么：</wt:quote>
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:display field="Entity.CustomerCode" />
<wt:display field="Entity.CustomerName" />
<wt:display field="Entity.PhoneNumber" />
<wt:display field="Entity.Company.CompanyName" />
<wt:display field="Entity.Remark" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align=" AlignEnum.Right">
        <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="删除"/>
        <wt:closebutton />
    </wt:row>
</wt:form>